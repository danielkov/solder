{
  "openapi": "3.0.3",
  "info": {
    "title": "Pet Store API",
    "description": "A comprehensive pet store API demonstrating various OpenAPI features",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@petstore.example.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://api.petstore.example.com/v1",
      "description": "Production server"
    },
    {
      "url": "https://staging-api.petstore.example.com/v1",
      "description": "Staging server"
    }
  ],
  "tags": [
    {
      "name": "pets",
      "description": "Pet management operations"
    },
    {
      "name": "owners",
      "description": "Pet owner management"
    },
    {
      "name": "orders",
      "description": "Order management"
    },
    {
      "name": "files",
      "description": "File upload operations"
    },
    {
      "name": "faq",
      "description": "FAQ management - tests acronym handling"
    }
  ],
  "paths": {
    "/pets": {
      "get": {
        "tags": ["pets"],
        "summary": "List all pets",
        "description": "Returns a paginated list of pets in the store",
        "operationId": "listPets",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of pets to return",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "minimum": 1,
              "maximum": 100,
              "default": 20
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Number of pets to skip",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "minimum": 0,
              "default": 0
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by pet status",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/PetStatus"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PetList"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["pets"],
        "summary": "Create a new pet",
        "description": "Adds a new pet to the store",
        "operationId": "createPet",
        "requestBody": {
          "description": "Pet to add to the store",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPet"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pet created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/pets/export": {
      "get": {
        "tags": ["pets"],
        "summary": "Export pets data",
        "description": "Export all pets data as a binary archive file",
        "operationId": "exportPets",
        "responses": {
          "200": {
            "description": "Export archive file",
            "content": {
              "application/zip": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/pets/{petId}": {
      "get": {
        "tags": ["pets"],
        "summary": "Get a pet by ID",
        "description": "Returns detailed information about a specific pet",
        "operationId": "getPetById",
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "description": "ID of the pet to retrieve",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          },
          "404": {
            "description": "Pet not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["pets"],
        "summary": "Update a pet",
        "description": "Updates an existing pet's information",
        "operationId": "updatePet",
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "description": "ID of the pet to update",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Updated pet information",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePet"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pet updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          },
          "404": {
            "description": "Pet not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["pets"],
        "summary": "Delete a pet",
        "description": "Removes a pet from the store",
        "operationId": "deletePet",
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "description": "ID of the pet to delete",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Pet deleted successfully"
          },
          "404": {
            "description": "Pet not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/owners": {
      "get": {
        "tags": ["owners"],
        "summary": "List all pet owners",
        "description": "Returns a list of registered pet owners",
        "operationId": "listOwners",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Owner"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["owners"],
        "summary": "Register a new owner",
        "description": "Creates a new pet owner account",
        "operationId": "createOwner",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOwner"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Owner created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Owner"
                }
              }
            }
          }
        }
      }
    },
    "/orders": {
      "post": {
        "tags": ["orders"],
        "summary": "Place an order",
        "description": "Creates a new order for pet adoption or purchase",
        "operationId": "createOrder",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrder"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order placed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          }
        }
      }
    },
    "/files": {
      "post": {
        "tags": ["files"],
        "summary": "Upload a file",
        "description": "Upload a single file with optional description",
        "operationId": "uploadFile",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file"],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "The file to upload"
                  },
                  "description": {
                    "type": "string",
                    "description": "Optional description of the file"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "File uploaded successfully"
          }
        }
      }
    },
    "/files/batch": {
      "post": {
        "tags": ["files"],
        "summary": "Upload multiple files",
        "description": "Upload multiple files in a single request",
        "operationId": "uploadMultipleFiles",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["files"],
                "properties": {
                  "files": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    },
                    "description": "Array of files to upload"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Files uploaded successfully"
          }
        }
      }
    },
    "/files/with-metadata": {
      "post": {
        "tags": ["files"],
        "summary": "Upload a file with metadata",
        "description": "Upload a file along with structured metadata",
        "operationId": "uploadFileWithMetadata",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["file", "metadata"],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "The file to upload"
                  },
                  "metadata": {
                    "type": "object",
                    "properties": {
                      "ownerId": {
                        "type": "string",
                        "description": "ID of the owner"
                      },
                      "tags": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "description": "Tags to associate with the file"
                      }
                    }
                  },
                  "description": {
                    "type": "string",
                    "description": "Optional description of the file"
                  },
                  "ownerId": {
                    "type": "integer",
                    "description": "ID of the owner"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "File uploaded with metadata successfully"
          }
        }
      }
    },
    "/files/raw": {
      "put": {
        "tags": ["files"],
        "summary": "Upload raw file bytes",
        "description": "Upload a file as raw binary data in the request body",
        "operationId": "uploadRawFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/octet-stream": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "File uploaded successfully"
          }
        }
      }
    },
    "/faq": {
      "get": {
        "tags": ["faq"],
        "summary": "List FAQ items",
        "description": "Returns a list of frequently asked questions - tests acronym handling",
        "operationId": "listFAQItems",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "description": "Filter by category",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/FAQCategory"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of FAQ items",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FAQList"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/faq/{id}": {
      "get": {
        "tags": ["faq"],
        "summary": "Get FAQ item by ID",
        "operationId": "getFAQItem",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "FAQ item details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FAQItem"
                }
              }
            }
          },
          "404": {
            "description": "FAQ item not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/pets/{petId}/photo": {
      "get": {
        "tags": ["pets"],
        "summary": "Get pet photo",
        "description": "Returns the pet's photo as binary data - tests single binary response handling",
        "operationId": "getPetPhoto",
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pet photo",
            "content": {
              "image/jpeg": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "Pet or photo not found"
          }
        }
      }
    },
    "/pets/{petId}/documents": {
      "get": {
        "tags": ["pets"],
        "summary": "Get pet documents",
        "description": "Returns pet documents in various formats - tests multiple binary content types",
        "operationId": "getPetDocuments",
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "format",
            "in": "query",
            "description": "Document format",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["pdf", "png", "jpeg"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pet documents",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "image/png": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "image/jpeg": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "Pet not found"
          }
        }
      }
    },
    "/pets/export/csv": {
      "get": {
        "tags": ["pets"],
        "summary": "Export pets data",
        "description": "Export all pets data as a binary archive file",
        "operationId": "exportPetsCSV",
        "responses": {
          "200": {
            "description": "Export archive file",
            "content": {
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/files/import": {
      "post": {
        "tags": ["files"],
        "summary": "Import a file with referenced schema",
        "description": "Import a file using a referenced multipart schema (tests multipart with $ref)",
        "operationId": "importFile",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/FileImportRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "File imported successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Pet": {
        "type": "object",
        "required": ["id", "name", "species", "status", "type"],
        "properties": {
          "type": {
            "type": "string",
            "const": "pet",
            "description": "Discriminator field - always 'pet' for this type"
          },
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the pet"
          },
          "name": {
            "type": "string",
            "description": "Name of the pet",
            "minLength": 1,
            "maxLength": 100
          },
          "species": {
            "$ref": "#/components/schemas/Species"
          },
          "breed": {
            "type": "string",
            "description": "Breed of the pet",
            "nullable": true
          },
          "age": {
            "type": "integer",
            "description": "Age of the pet in years",
            "minimum": 0,
            "maximum": 100,
            "nullable": true
          },
          "weight": {
            "type": "number",
            "format": "float",
            "description": "Weight of the pet in kilograms",
            "minimum": 0
          },
          "status": {
            "$ref": "#/components/schemas/PetStatus"
          },
          "owner": {
            "$ref": "#/components/schemas/Owner",
            "nullable": true
          },
          "tags": {
            "type": "array",
            "description": "Tags associated with the pet",
            "items": {
              "type": "string"
            },
            "uniqueItems": true
          },
          "photoUrls": {
            "type": "array",
            "description": "URLs of pet photos",
            "items": {
              "type": "string",
              "format": "uri"
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the pet was added to the system"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the pet information was last updated"
          }
        }
      },
      "NewPet": {
        "type": "object",
        "required": ["name", "species"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "species": {
            "$ref": "#/components/schemas/Species"
          },
          "breed": {
            "type": "string",
            "nullable": true
          },
          "age": {
            "type": "integer",
            "minimum": 0,
            "nullable": true
          },
          "weight": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "photoUrls": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      },
      "UpdatePet": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "breed": {
            "type": "string",
            "nullable": true
          },
          "age": {
            "type": "integer",
            "minimum": 0,
            "nullable": true
          },
          "weight": {
            "type": "number",
            "format": "float",
            "minimum": 0
          },
          "status": {
            "$ref": "#/components/schemas/PetStatus"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "PetList": {
        "type": "object",
        "required": ["items", "total"],
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Pet"
            }
          },
          "total": {
            "type": "integer",
            "description": "Total number of pets matching the query"
          },
          "limit": {
            "type": "integer"
          },
          "offset": {
            "type": "integer"
          }
        }
      },
      "Species": {
        "type": "string",
        "enum": [
          "dog",
          "cat",
          "bird",
          "rabbit",
          "hamster",
          "guinea_pig",
          "fish",
          "reptile",
          "other"
        ],
        "description": "Species of the pet"
      },
      "PetStatus": {
        "type": "string",
        "enum": ["available", "pending", "adopted", "not_available"],
        "description": "Current status of the pet"
      },
      "Owner": {
        "type": "object",
        "required": ["id", "firstName", "lastName", "email"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "firstName": {
            "type": "string",
            "minLength": 1
          },
          "lastName": {
            "type": "string",
            "minLength": 1
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "pattern": "^\\+?[1-9]\\d{1,14}$",
            "nullable": true
          },
          "address": {
            "$ref": "#/components/schemas/Address",
            "nullable": true
          }
        }
      },
      "NewOwner": {
        "type": "object",
        "required": ["firstName", "lastName", "email"],
        "properties": {
          "firstName": {
            "type": "string",
            "minLength": 1
          },
          "lastName": {
            "type": "string",
            "minLength": 1
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "nullable": true
          },
          "address": {
            "$ref": "#/components/schemas/Address",
            "nullable": true
          }
        }
      },
      "Address": {
        "type": "object",
        "required": ["street", "city", "country"],
        "properties": {
          "street": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "state": {
            "type": "string",
            "nullable": true
          },
          "postalCode": {
            "type": "string",
            "nullable": true
          },
          "country": {
            "type": "string"
          }
        }
      },
      "Order": {
        "type": "object",
        "required": ["id", "petId", "ownerId", "status", "orderDate"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "petId": {
            "type": "string",
            "format": "uuid"
          },
          "ownerId": {
            "type": "string",
            "format": "uuid"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          },
          "status": {
            "$ref": "#/components/schemas/OrderStatus"
          },
          "orderDate": {
            "type": "string",
            "format": "date-time"
          },
          "completedDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "NewOrder": {
        "type": "object",
        "required": ["petId", "ownerId"],
        "properties": {
          "petId": {
            "type": "string",
            "format": "uuid"
          },
          "ownerId": {
            "type": "string",
            "format": "uuid"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          }
        }
      },
      "OrderStatus": {
        "type": "string",
        "enum": ["pending", "approved", "completed", "cancelled"],
        "description": "Order status"
      },
      "Error": {
        "type": "object",
        "required": ["code", "message", "success"],
        "properties": {
          "success": {
            "type": "boolean",
            "const": false,
            "description": "Always false for error responses"
          },
          "code": {
            "type": "string",
            "description": "Error code"
          },
          "message": {
            "type": "string",
            "description": "Human-readable error message"
          },
          "details": {
            "type": "object",
            "description": "Additional error details",
            "additionalProperties": true,
            "nullable": true
          }
        }
      },
      "FAQItem": {
        "type": "object",
        "description": "Frequently asked question item - tests acronym handling (FAQItem -> FaqItem)",
        "required": ["id", "question", "answer", "category"],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "question": {
            "type": "string",
            "description": "The question text"
          },
          "answer": {
            "type": "string",
            "description": "The answer text"
          },
          "category": {
            "$ref": "#/components/schemas/FAQCategory"
          },
          "relatedURLs": {
            "type": "array",
            "description": "Related URLs - tests URL acronym handling",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      },
      "FAQCategory": {
        "type": "string",
        "description": "FAQ category - tests acronym in enum name",
        "enum": ["general", "orders", "shipping", "returns", "pets"]
      },
      "FAQList": {
        "type": "object",
        "description": "List of FAQ items",
        "required": ["items", "total"],
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FAQItem"
            }
          },
          "total": {
            "type": "integer",
            "description": "Total number of FAQ items"
          }
        }
      },
      "HTTPError": {
        "type": "object",
        "description": "HTTP error response - tests HTTP acronym handling",
        "required": ["statusCode", "message"],
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "HTTP status code"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "FileImportRequest": {
        "type": "object",
        "description": "Request body for file import - tests multipart with $ref",
        "required": ["file", "format"],
        "properties": {
          "file": {
            "type": "string",
            "format": "binary",
            "description": "The file to import"
          },
          "format": {
            "type": "string",
            "description": "The format of the file (e.g., csv, json, xml)"
          },
          "validate": {
            "type": "boolean",
            "description": "Whether to validate the file before importing"
          }
        }
      }
    }
  }
}
